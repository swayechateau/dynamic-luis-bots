<div class="modal fade bd-add-modal-lg" tabindex="-1" role="dialog" aria-labelledby="addUserModal" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form id="newIntent" action="/intents" method="post">
        <div class="modal-header">
            <h5 class="modal-title">Add User</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="user-name">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Name">
            </div>
            <div class="form-group col-md-6">
                <label for="user-email">Email</label>
                <input type="text" class="form-control" name="email" placeholder="Email">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="intent-description">Department</label>
                <select class="form-control" name="department">
                <% if(typeof departments !== 'undefined'){%>
                <%  for(let i=0; i<departments.length; i++){
                        if(user.perm.department == departments[i]._id){%>
                    <option selected value="<%=departments[i]._id%>"><%=departments[i].friendlyName%></option>
                <% }else if(user.perm.wizard==true){%>
                    <option value="<%=departments[i]._id%>"><%=departments[i].friendlyName%></option>
                <%}}}else{%>
                    <option selected value="<%=data._id%>"><%=data.friendlyName%></option>
                <%}%>
                </select>
            </div>

            <div class="form-group col-md-3">
              <label for="admin">Department Admin</label>
              <select class="form-control" name="admin">
                <option value="false">No</option>
                <option value="true">Yes</option>
              </select>
            </div>
            <div class="form-group col-md-3">
              <label for="wizard">Portal Admin</label>
              <select class="form-control" name="wizard">
                <option value="false">No</option>
                <option value="true">Yes</option>
              </select>
            </div>

            <div class="form-group">
                <input type="hidden" class="form-control" name="disabled" value="false">
            </div>
          </div>
        </div>
        <div class="modal-footer">
            <input id="postIntent" type="submit" value="save" class="btn btn-primary">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>
